Config { -- font = "-*-fixed-*-*-*-*-14-*-*-*-*-*-*-*"
         font = "xft:Inconsolata:size=16"
       , commands = [
         Run Cpu [ "--template", "<fc=#ffffff><icon=.xmonad/icons/cpu.xbm/></fc>"
                 , "-L", "3"
                 , "-H", "50"
                 , "--normal", "green"
                 , "--high", "red"
                 ] 10

       , Run StdinReader

       -- network activity monitor (dynamic interface resolution)
       , Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                            , "--Low"      , "1000"       -- units: kB/s
                            , "--High"     , "5000"       -- units: kB/s
                            , "--low"      , "darkgreen"
                            , "--normal"   , "darkorange"
                            , "--high"     , "darkred"
                            ] 10

       -- memory usage monitor
       , Run Memory         [ "--template" ,"<fc=#ffffff><icon=.xmonad/icons/mem.xbm/></fc> <usedratio>%"
                            , "--Low"      , "20"        -- units: %
                            , "--High"     , "90"        -- units: %
                            , "--low"      , "darkgreen"
                            , "--normal"   , "darkorange"
                            , "--high"     , "darkred"
                            ] 10

       -- time and date indicator 
       --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
       , Run Date    "<fc=#ABABAB>%F (%a) %T</fc>" "date" 10
       , Run Battery [ "-t","Battery <left>%"
                     , "-L","50"
                     , "-H","75"
                     , "-h","green"
                     , "-n","yellow"
                     , "-l","red"
                     ] 10
                     ] 
       , position = TopW L 90
       , template = "%StdinReader% | %cpu% | %memory% | %battery% | %dynnetwork% }{ %date%"
       }

